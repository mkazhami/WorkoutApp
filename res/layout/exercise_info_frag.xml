<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/exerciseInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: " />

    <EditText
        android:id="@+id/exerciseInfoNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/exerciseInfoSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets: " />

    <EditText
        android:id="@+id/exerciseInfoSetsField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/exerciseInfoReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reps: " />

    <EditText
        android:id="@+id/exerciseInfoRepsField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/exerciseInfoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info: " />

    <EditText
        android:id="@+id/exerciseInfoInfoField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

</LinearLayout>